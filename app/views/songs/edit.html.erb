<!-- Validation failure messages -->
<% if @song.errors.any? %>
  <% @song.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Song #<%= @song.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_song/<%= @song.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @song.name %>">
      </div>

      <!-- Label and input for artist -->
      <div class="form-group">
        <label for="artist" class="control-label">
          Artist
        </label>

        <input type="text" id="artist" name="artist" placeholder="Artist" class="form-control" value="<%= @song.artist %>">
      </div>

      <!-- Label and input for genre -->
      <div class="form-group">
        <label for="genre" class="control-label">
          Genre
        </label>

        <input type="text" id="genre" name="genre" placeholder="Genre" class="form-control" value="<%= @song.genre %>">
      </div>

      <!-- Label and input for year -->
      <div class="form-group">
        <label for="year" class="control-label">
          Year
        </label>

        <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="<%= @song.year %>">
      </div>

      <button class="btn btn-warning">
        Update Song
      </button>
      or
      <a href="/songs/<%= @song.id %>">Cancel</a>
    </form>
  </div>
</div>
