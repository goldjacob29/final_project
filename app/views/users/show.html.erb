<div class="page-header">
  <% if (owns_page = current_user == @user) == false %>
  <h3><%= @user.username %></h3>
  <% else %>
  <h3>My Page</h3>
  <% end %>

  <% if current_user != @user %>
  <% if (friendship = FriendRequest.find_by(sender_id: current_user.id, recipient_id: @user.id)) != nil %>
  <a href="/delete_friend_request/<%= friendship.id %>">
    Unfollow
  </a>
  <% else %>
  <form action="/create_friend_request" method="post">
    <button class="btn btn-link">
      <i class="fa fa-user-plus" aria-hidden="true"></i>
    </button>
    <input name="sender_id" type="hidden" value="<%= current_user.id %>">
    <input name="recipient_id" type="hidden" value="<%= @user.id %>">
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
  </form>
  Follow
  <% end %>
  <% end %>
</div>




<%= render "form_artist" %>



<!-- A User has many playlists -->


<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        My Playlists
        <a href="/playlists/new" class="btn btn-md btn-success">Create New</a>
      </li>


      <% @user.playlists.each do |playlist| %>
      <li class="list-group-item">
        <a href="/playlists/<%= playlist.id %>">
          <%= playlist.name %>
        </a>
        <div class="btn-group btn-group-xs pull-right">
          <a href="/playlists/<%= playlist.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
          <%if current_user == playlist.user %>
          <a href="/playlists/<%= playlist.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
          <a href="/delete_playlist/<%= playlist.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash-o"></i>
          </a>
          <% end %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>

