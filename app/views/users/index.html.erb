<div class="page-header">

  <h1>
    <% if @which_page == "index" %>
    <% if params[:search] %>
    Search Results
    <% else %>
    Users
    <% end %>
    <% elsif  @which_page == "following" %>
    Following
    <% else %>
    Followers
    <% end %>
  </h1>
</div>

<% if @users.count > 0 %>
<div class="row">
  <div class="col-md-6">
    <table class="table table-striped table-hover">
      <tr>
        <th>#</th>
        <th>Username</th>
        <th>Email</th>
      </tr>
      <% count = 0 %>
      <% @users.each do |user| %>
      <% count+=1 %>
      <tr>
          <td><%= count %></td>
          <td><a href="/users/<%= user.id %>"><%= user.username %></td></a>
          <td><%= user.email %></td>

        </tr>
        <% end %>
      </table>
      <%= paginate @users, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>

  <% end %>
