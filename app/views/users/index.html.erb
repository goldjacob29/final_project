<div class="page-header">

  <h1>
    <% if @which_page == "index" %>
    <% if params[:search] %>
    Search Results
    <% else %>
    Users
    <% end %>
    <% else %>
    Following
    <% end %>
  </h1>
</div>

<div class="row">
  <div class="col-md-6">
    <table class="table table-striped table-hover">
      <tr>
        <th>Username</th>
        <th>Email</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><a href="/users/<%= user.id %>"><%= user.username %></td></a>
        <td><%= user.email %></td>

      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
